<Window x:Class="kringloopKleding.ChoiceCustom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="Waarschuwing"
        Height="200" Width="500">
    <Grid>
        <Label Background="red" Height="4" VerticalAlignment="top"/>
        <StackPanel HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top" Orientation="Vertical">
            <TextBlock x:Name="lblTitle" HorizontalAlignment="Center" TextAlignment="Center" Width="auto" Text="" Margin="0,40,0,0" FontSize="20"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom"  Orientation="Horizontal" Margin="0,0,0,10">
            <Button x:Name="btnJa" Content="Ja" HorizontalAlignment="Left" Height="30" VerticalAlignment="Center" Width="125" Margin="0,0,0,0" FontSize="18" Click="btnJa_Click"/>
            <Button x:Name="btnNee" Content="Nee" Click="btnNee_Click" Width="125" Height="30" FontSize="18" Margin="50,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
